    Home = Window:AddTab({Title = "Home", Icon = "home"}),
    Main = Window:AddTab({Title = "Main", Icon = "swords"})
}

Tabs.Home:AddParagraph({Title = "VHub V3 BETA", Content = "Best Blade Ball script 2025\nMade by ketsu"})
